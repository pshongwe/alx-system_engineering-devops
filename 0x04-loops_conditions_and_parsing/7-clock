#!/usr/bin/env bash
# This script displays the time for 12 hours and 59 minutes

hour=0

# Use a while loop to display hours and minutes
while [ $hour -le 12 ]; do
  echo "Hour: $hour"
  minute=0  # Initialize minute to 0 for each hour
  while [ $minute -le 59 ]; do
    echo "$minute"
    ((minute++))
  done
  ((hour++))
done

